<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="../assets/css/style.css">
</head>

<body class="body-alimentos">
    <a href="/" class="btn btn-voltar">Logout</a>
    <div class="row">
        <div class="col-md mt-5 form-alimentos">
            <h3 class="text-center">Cadastrar</h3>
            <form action="" method="POST" class="form-control">

                <input type="hidden" name="id" value="<%=id%>">
                <input type="hidden" name="nome" value="<%=nome%>">

                <input type="text" name="produto" placeholder="Nome do produto" class="textbox form-control" required>

                <input type="date" name="validade"  class="textbox form-control" required>

                <input type="submit" value="Gravar" class="form-control btn btn-form">
            </form>
        </div>
        <div class="col-md mt-5 form-alimentos">
            <h3 class="text-center">Alimentos</h3>
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button bg-transparent" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Geral
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                                <table class="table">
                                    <tr>
                                        <th onclick="window.location='/alimentos?id=<%=id%>&ordem=1'">Produto</th>
                                        <th onclick="window.location='/alimentos?id=<%=id%>&ordem=0'">Validade</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    <% for (var n=0; n<produtosGeral.length; n++){%>
                                        <tr>
                                            <td>
                                                <%=produtosGeral[n].produto%>
                                            </td>
                                            <td>
                                                <%=produtosGeral[n].validade.getDate()+1%>/
                                                    <%=produtosGeral[n].validade.getMonth()+1%>/
                                                        <%=produtosGeral[n].validade.getFullYear()%>
                                            </td>
                                            <td> <a href="/excluir?id=<%=produtosGeral[n]._id%>"
                                                    class="btn btn-success ">Consumido</a></td>
                                            <td> <a href="/descartado?id=<%=produtosGeral[n]._id%>"
                                                    class="btn btn-danger ">Vencido</a></td>
                                        </tr>
                                        <%}%>
                                </table>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed bg-transparent" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Descartados
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                                <table class="table">
                                    <tr>
                                        <th onclick="window.location='/alimentos?id=<%=id%>&ordem=1'">Produto</th>
                                        <th onclick="window.location='/alimentos?id=<%=id%>&ordem=0'">Validade</th>
                                        <th></th>

                                    </tr>
                                    <% for (var n=0; n<produtosDescarte.length; n++){%>
                                        <tr>
                                            <td>
                                                <%=produtosDescarte[n].produto%>
                                            </td>
                                            <td>
                                                <%=produtosDescarte[n].validade.getDate()+1%>/
                                                    <%=produtosDescarte[n].validade.getMonth()+1%>/
                                                        <%=produtosDescarte[n].validade.getFullYear()%>
                                            </td>
                                            <td> <a href="/excluir?id=<%=produtosDescarte[n]._id%>"
                                                    class="btn btn-danger ">Excluir</a></td>
                                        </tr>
                                    <%}%>
                                </table>
                        </div>
                    </div>
                </div>
            </div>
</body>


</html>